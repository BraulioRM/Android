<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ImageButtonQuiz">
        <item name="android:layout_width">@dimen/image_button_quiz_size</item>
        <item name="android:layout_height">@dimen/image_button_quiz_size</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="android:background">@drawable/background_button_selector</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="LabelBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="LabelBase.Medium">
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="LabelBase.Medium.Black">
        <item name="android:textColor">@color/colorPrimaryDarkText</item>
    </style>

</resources>
