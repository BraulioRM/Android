<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="160dp"
    android:layout_margin="@dimen/margin_small"
    app:cardElevation="@dimen/elevation_low"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground">
        <ImageView
            android:id="@+id/image_book"
            android:layout_width="100dp"
            android:layout_height="160dp"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/label_title"
            style="@style/LabelTitle"
            android:layout_toRightOf="@id/image_book"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_large"/>
        <TextView
            android:id="@+id/label_author"
            style="@style/LabelContent"
            android:layout_below="@id/label_title"
            android:layout_alignLeft="@id/label_title"
            android:layout_marginRight="@dimen/margin_large"
            android:maxLines="2"/>
        <View
            android:id="@+id/view_separator"
            style="@style/Separator"
            android:layout_below="@id/label_author"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_toRightOf="@id/image_book"/>
        <Button
            android:id="@+id/button_share"
            style="@style/ButtonCard"
            android:text="@string/button_share"
            android:layout_below="@id/view_separator"
            android:layout_toRightOf="@id/image_book"
            android:layout_marginLeft="@dimen/margin_medium"/>
        <Button
            android:id="@+id/button_view_more"
            style="@style/ButtonCard"
            android:text="@string/button_view_more"
            android:layout_toRightOf="@id/button_share"
            android:layout_alignBottom="@id/button_share"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>